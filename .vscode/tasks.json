{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ build active file",
            "command": "/usr/bin/clang++", //switch to clang for codeLLVM
            // "command": "/opt/homebrew/Cellar/gcc/13.2.0/bin/g++-13", 
            "args": [
                "-std=c++2b",
                "-Wl,-stack_size,0x10000000",
                "-g",
                // "-Wshadow",T
                "-Wall",
                "-pedantic-errors",
                "-ggdb",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent",
                "focus": true,
                "panel": "shared"
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}
